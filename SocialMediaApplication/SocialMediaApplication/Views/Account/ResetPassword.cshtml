@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    @if (ViewBag.ResetMessage != null)
    {
        <div class="alert alert-success">@ViewBag.ResetMessage</div>
    }
    @if (ViewBag.ResetErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ResetErrorMessage</div>
    }
    <div class="form-group">
    <label>Enter your email to reset your password:</label>
    <input type="email" name="resetEmail" class="form-control" placeholder="Enter your email" required />
</div>
    <div class="form-group">
    <button type="submit" class="btn btn-secondary">Send Reset Link</button>
</div>
}
