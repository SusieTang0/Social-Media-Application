@model Tuple<string, SocialMediaApplication.Models.Comment>

@{
    var commentId = Model.Item1;
    var comment = Model.Item2;
}

<!-- this is the button to Like this comment-->
<div class="mt-2">
    <div class="row p-1 d-flex justify-content-between">
        <div class="col-md-2">
            <img src="images/icon-logo.png" alt="Alternate Text" style="width:50px;" />
        </div>
        <div class="col-md-10">
            <div class="row py-2 border border-bottom-1 rounded-top-2">
                <div class="col-md-4  text-start">
                    @comment.AuthorName
                    @comment.Likes.Count
                </div>
                <div class="col-md-4  text-start">
                    @comment.CreatedTime.ToString("f")
                </div>
                <div class="col-md-4">
                    @{
                        var liked = comment.Likes != null && comment.Likes.Any(l => l.Value.UserId == ViewBag.UserId);
                    }
                    @if (liked)
    {
      <!-- UnlikeComment-->
                    <form asp-action="UnlikeComment" asp-controller="Like" method="post">
                            <input type="hidden" name="postId" value="@comment.PostId" />
                            <input type="hidden" name="commentId" value="@commentId" />
                        <button type="submit" class="btn btn-link">
                            <img src="images/heart-outline.svg" alt="Unlike" style="width:20px;" />
                        </button>
                    </form>
    }else
    {
 <!-- Like Comment-->
                    <form asp-action="LikeComment" asp-controller="Like" method="post">
                            <input type="hidden" name="postId" value="@comment.PostId" />
                            <input type="hidden" name="commentId" value="@commentId" />
                            <button type="submit" class="btn btn-link">
                            <img src="images/heart.svg" alt="Like" style="width:20px;" />
                        </button>
                    </form>
    }
                    <a class="d-inline-flex focus-ring py-1 px-2 text-decoration-none border rounded-2"
                       data-bs-toggle="collapse" href="#collapseLike@commentId" role="button" aria-expanded="false"
                       aria-controls="collapseLike@commentId">
                        Likes @comment.Likes.Count
                    </a>
                    <div class="collapse mt-2" id="collapseLike@commentId">
                        @if (comment.Likes != null && comment.Likes.Count > 0)
    {
                        <div>
                            <ul class="list-unstyled">
                                    @foreach (var like in comment.Likes.Values)
        {
                                <li>@like.UserName</li>
        }
                            </ul>
                        </div>
    }
    else
    {
                        <p>No likes yet.</p>
    }
                    </div>
                </div>
                </div>
                <div class="col-md-1">

                    <!-- this is the button to Edit user's' own comment-->
                    <a asp-action="Like">
                        <img src="images/edit.svg" alt="Alternate Text"
                                style="width:20px;text-decoration-line:none;" />
                    </a>
                </div>
                <div class="col-md-1">
                    <!-- this is the button to Delete user's' own comment-->
                    <a type="button" class="btn-close"></a>
                </div>
            </div>
            <div class="row py-2 text-start border border-1 rounded-bottom-2">
            <p>@comment.Content</p>
            </div>
        </div>
    </div>
</div>
